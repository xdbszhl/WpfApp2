<Window x:Class="ImageSegmentation.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="登录注册" Height="300" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <Label Content="用户名:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" FontSize="16" Margin="0,0,0,15"/>
            <Label Content="密码:" FontSize="16" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" FontSize="16" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="登录" FontSize="16" Padding="10,5" Margin="0,0,20,0" Click="LoginButton_Click"/>
                <Button Content="注册" FontSize="16" Padding="10,5" Click="RegisterButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>